<% if current_user.items.include? @item %>
  <div class="message-to-user">
    Here's what your item will look like to everyone else.
    <br><br>
    To share this on Facebook or Twitter, simply copy-paste this link: <%= item_url(@item) %>
  </div>
<% end %>

<div class="item-show-container">
  
  <%= image_tag(@item.image.content.url) %>

  <h2><%= @item.name %></h2>

  <div class="item-description">
    <%= @item.description %>
  </div>

  <div class="byline centered">
    <%= @item.nonprofit_percentage %>% of each purchase goes to benefit <%= @item.nonprofit_url %>.
  </div>
</div>
<br><br><br><br>